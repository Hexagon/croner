{
    "lint": {
        "files": {
            "include": ["src","test/deno"],
            "exclude": ["dist","test/node"]
        }
    },
    "fmt": {
        "files": {
            "include": ["test/deno"]
        },
        "options": {
            "lineWidth": 100
        }
    },
    "tasks": {
        "test": "deno test --allow-none test/deno",
        "benchmark": "deno bench --unstable test/deno/bench"
    }
}